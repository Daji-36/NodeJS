<div class="mt-4">
    <div>
        <a href="/me/stored/courses">Danh sách khóa học</a>
        <h2>Khóa học đã xóa</h2>
        
    </div>
    
    <table class="table">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên khóa học</th>
                <th>Trình độ</th>
                <th colspan="2">Thời gian tạo</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <th>{{inc @index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.levels}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>
                        <a href="" class="btn btn-warning btn-restore" data-id="{{this._id}}">Khôi phục</a>
                        <a href="" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" data-id="{{this._id}}">Xóa vĩnh viễn</a>
                    </td>
                </tr>
            {{else}}
                <tr>
                    <td colspan="5" class="text-center">Thùng rác trống. Vui lòng
                        <a href="/me/stored/courses">quay lại danh sách khóa học</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{!-- Comfirm delete courses --}}
<div id="deleteModal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xác nhận xóa khóa học</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Hành động này không thể khôi phục. Bạn chắc chắn muốn xóa?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button id="btn-delete-course" type="button" class="btn btn-danger">Xóa vĩnh viễn</button>
      </div>
    </div>
  </div>

<form name="delete-course-form" method="POST"></form> 

<form name="restore-course-form" method="POST"></form>

</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        var courseId
        var deleteForm = document.querySelector('form[name="delete-course-form"]')
        var restoreForm = document.querySelector('form[name="restore-course-form"]')
        const btnDeleteCourse = document.getElementById('btn-delete-course')
        var restoreButtons = $('.btn-restore')
        // Khi modal được hiển thị
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            courseId = button.data('id')
        })

        
       btnDeleteCourse.onclick = () => {
           deleteForm.action = `/courses/${courseId}/force?_method=DELETE`
           deleteForm.submit()
       }

        restoreButtons.click (function(e){
            e.preventDefault()
            var courseId = $(this).data('id')
            restoreForm.action = `/courses/${courseId}/restore?_method=PATCH`
            restoreForm.submit()
        })
    })
</script>