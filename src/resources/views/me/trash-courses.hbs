<form name="container-form" class="mt-4" method="POST" action="/courses/handle-form-actions">
    <div>
        <a href="/me/stored/courses">Danh sách khóa học</a>
        <h2>Khóa học đã xóa</h2>
        <div class="mt-3 d-flex align-items-center">
            <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="select-all">
            <label class="custom-control-label" for="select-all">Chọn tất cả</label>
        </div>
 
        <select class="custom-select custom-select-sm cb-select-all-options" name="action" required>
            <option value="">--Chọn hành động--</option>
            <option value="restore">Khôi phục</option>
            <option value="forceDelete">Xóa vĩnh viễn</option>
        </select>

        <button class="btn btn-sm btn-primary" id="btn-practice-selected" disabled>Thực hiện</button>

        </div>
    </div>
    
    <table class="table mt-3">
        <thead>
            <tr>
                <th>#</th>
                <th>STT</th>
                <th>Tên khóa học</th>
                <th>Trình độ</th>
                <th colspan="2">Thời gian xóa</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <td>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="courseIds[]" value="{{this._id}}">
                    </div>
                </td>
                    <th>{{inc @index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.levels}}</td>
                    <td>{{this.deletedAt}}</td>
                    <td>
                        <a href="" class="btn btn-warning btn-restore" data-id="{{this._id}}">Khôi phục</a>
                        <a href="" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" data-id="{{this._id}}">Xóa vĩnh viễn</a>
                    </td>
                </tr>
            {{else}}
                <tr>
                    <td colspan="5" class="text-center">Thùng rác trống. Vui lòng
                        <a href="/me/stored/courses">quay lại danh sách khóa học</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</form>

{{!-- Comfirm delete courses --}}
<div id="deleteModal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xác nhận xóa khóa học</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Hành động này không thể khôi phục. Bạn chắc chắn muốn xóa?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button id="btn-delete-course" type="button" class="btn btn-danger">Xóa vĩnh viễn</button>
      </div>
    </div>
  </div>

<form name="delete-course-form" method="POST"></form> 

<form name="restore-course-form" method="POST"></form>

</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        var courseId
        var deleteForm = document.querySelector('form[name="delete-course-form"]')
        var restoreForm = document.querySelector('form[name="restore-course-form"]')
        const btnDeleteCourse = document.getElementById('btn-delete-course')
        var restoreButtons = $('.btn-restore')
        var selectAll = $('#select-all')
        var courseItemCheckBox = $('input[name="courseIds[]"]')
        var checkAllSubmitBtn = $('#btn-practice-selected')
        var containerForm = $('form[name="container-form"]')


        // Khi modal được hiển thị
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            courseId = button.data('id')
        })

        
       btnDeleteCourse.onclick = () => {
           deleteForm.action = `/courses/${courseId}/force?_method=DELETE`
           deleteForm.submit()
       }

        restoreButtons.click (function(e){
            e.preventDefault()
            var courseId = $(this).data('id')
            restoreForm.action = `/courses/${courseId}/restore?_method=PATCH`
            restoreForm.submit()
        })

        // Chon tat ca
        selectAll.change (function() {
            var isCheckedAll = $(this).prop('checked')
            courseItemCheckBox.prop('checked', isCheckedAll)
            renderCheckAllSubmitBtn()
        })
        // Course item checkbox change
        courseItemCheckBox.change(function() {
            var isCheckedAll = courseItemCheckBox.length === $('input[name="courseIds[]"]:checked').length // Lấy số lượng checkbox được chọn
            selectAll.prop('checked', isCheckedAll) // Cập nhật trạng thái checkbox "Chọn tất cả"
            renderCheckAllSubmitBtn() // Gọi hàm để cập nhật trạng thái nút "Thực hiện"
        })    

        // Render Check All Submit Btn
        function renderCheckAllSubmitBtn() {
            var checkedCount = $('input[name="courseIds[]"]:checked').length
            if (checkedCount > 0) {
                // Nếu có checkbox được chọn
                checkAllSubmitBtn.attr('disabled', false)
            } else {
                // Nếu không có checkbox nào được chọn
                checkAllSubmitBtn.attr('disabled', true)
            }
        } 
    }
)
</script>