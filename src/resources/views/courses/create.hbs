<div class="mt-4">
    <h3>Tạo khóa học mới</h3>
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name="description"></textarea>
        </div>
        <div class="form-group">
            <label for="videoID">Video ID</label>
            <input type="text" class="form-control" id="videoID" name="videoID">
        </div>
        <div class="form-group">
            <label for="levels">Trình độ</label>
            <input type="text" class="form-control" id="levels" name="levels">
        </div>
        <button type="submit" class="btn btn-primary">Thêm</button>
    </form>
</div>